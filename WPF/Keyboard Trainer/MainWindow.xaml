            <Button Margin="3" Width="50" Content="`"></Button>
            <Button x:Name="NumPad1" Style="{StaticResource btnPink}" Margin="3" Width="50" Content="1"></Button>
            <Button x:Name="NumPad2" Margin="3" Width="50" Content="2"></Button>
