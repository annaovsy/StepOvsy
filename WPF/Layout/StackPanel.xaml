<Window x:Class="Layout.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layout"
        mc:Ignorable="d"
        Title="StackPanel" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button Background="Bisque" Content="1" Width="50" Margin="10"/>
        <Button Background="Aqua" Content="2" Width="50" Margin="10"/>
        <Button Background="#FFC0ECC0" Content="3" Width="50" Margin="10"/>
    </StackPanel>
</Window>
