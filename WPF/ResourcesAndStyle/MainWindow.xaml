<Window x:Class="ResourcesAndStyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcesAndStyle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Background="{StaticResource redStyle}">
        <Button Content="Ресурсы" Height="50" Width="100" Style="{StaticResource BlackAndWhite}"></Button>
        <Button Width="80" Padding="0" Height="40" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="OK" Style="{StaticResource BlackAndWhite}"/>
        <TextBox x:Name="myTextBox"></TextBox>
        <TextBlock Text="{Binding ElementName=myTextBox, Path=Text}" Height="20"></TextBlock>
    </StackPanel>
</Window>
